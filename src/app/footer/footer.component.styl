
.footer
    padding 57px 0 0 0
    margin-top 66px
    display flex
    flex-direction: column

.footer__content
    display flex
    justify-content: space-between
.footer__title 
    color #242424
    font-family Tahoma
    font-size 16px
    font-weight 400
    line-height 26px
    text-transform uppercase

.footer__list 
    color #333333
    font-family Calibri
    font-size 15px
    font-weight 400
    // Text style for "Кабельные"
    //line-height 30px
    // Text style for "Аксессуары"
    line-height 18px
    margin-top 16px 
    margin-left -22px
    column-count: 3
    column-gap: 20px
.footer__list2 
    color #333333
    font-family Calibri
    font-size 15px
    font-weight 400
    line-height 18px
    margin-top 16px
    margin-left:  -22px

.footer__list li
    margin-bottom 5px
    max-width 256px

.footer__bottom
    width 100%
    border-top: 1px solid #d2d2d2 
    margin 40px 0 0 0
    color #272727
    font-family Verdana
    font-size 20px
    font-weight 400
    line-height 24px

.footer__subscript
    width 100%
    display flex
    justify-content: space-between
    padding 45px 0 30px 0

.footer__subscript p
    margin 0 16px 0 0
    color #272727
    font-family Verdana
    font-size 20px
    font-weight 400
    line-height 35px

.footer__subscript input 
    width 401px
    height 36px
    border 1px solid #ededed
    border-radius: 8px
    background-color #ffffff    
    color #4d4d4d
    font-family Calibri
    font-size 16px
    font-weight 300
    line-height 20px
    letter-spacing 0.4px
    padding-left 19px
.footer__subscript button
    width 117px
    height 40px
    background-color #e86625
    border-radius: 8px
    position absolute
    right 0
    color #ffffff
    font-family Calibri
    font-size 16px
    font-weight 300
    line-height 20px
    letter-spacing 0.4px
.footer__subscript>div
    display flex
    // margin-right 22px
    position relative   

.social__icons
    display flex
.social__icons img 
    width 34px
    height 34px
    margin 0 0 0 9px

.footer__autor
    text-align: center
    margin 0 0 26px 0
    color #4f4f4f
    font-family Roboto
    font-size 14px
    font-weight 400
    line-height 20px

