fonttahoma = Tahoma, Verdana, Segoe, sans-serif
font-calibri = Calibri, Candara, Segoe, Segoe UI, Optima, Arial, sans-serif


.catalog-item
    width 196px
    height 400px
    border 1px solid #d3d3d3
    border-radius 8px
.catalog-item-articl
    height 32px
    border-bottom: 1px solid #d3d3d3
    color: #454545
    font 12px fonttahoma
    padding-left:  10px
    line-height: 32px

.catalog-item-img
    width 100%
    max-height: 200px
    overflow hidden 
    margin-top 5px
    text-align: center

.catalog-item-img>img
    height 150px
    width 177px

.catalog-item-title
    font 15px fonttahoma
.catalog-item-title>p
    font 15px font-calibri
    font-weight normal  
    margin-top: 20px
    margin-left 20px
    padding 0
    line-height: 15px
.catalog-item-price>p
    margin-top 20px
    text-align center
    font 15px fonttahoma
.catalog-item-price>p>span
    font-size  22px
    font-weight bold
    padding 0 3px

.catalog-item-to-cart
    height 32px
    width: 170px;
    margin: 0 auto;
    margin-top: 23px;
    background #e86625
    border-radius 5px
    display flex
    align-items center
    justify-content center
    color: #ffffff

.catalog-item-to-cart>p
    position relative   
    font: 16px fonttahoma
    text-align center
//cart-icon
.catalog-item-to-cart>p:before
    position absolute
    left -25px
    top 0
    content: ""
    background: url("../../assets/images/cart/cart_ps.png")
    background-repeat: no-repeat 
    width 22px
    height 18px

 .catalog-item-to-par
     display flex
     align-items: center
     justify-content: center
    //  margin-top 13px

 .catalog-item-to-par>p
     font: 12px fonttahoma
     line-height 12px
     margin-left 3px