 
// variables daz
border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

fonttahoma = Tahoma, Verdana, Segoe, sans-serif
font-calibri = Calibri, Candara, Segoe, Segoe UI, Optima, Arial, sans-serif

// start stylus
body 

    font-family 'Source Sans Pro' sans-serif
    font-weight 300
    margin 0
    padding 0


*
    margin 0
    padding 0

#panel
    display block
//070919
.container-1100 
    margin: 0 auto
    max-width 1100px


.wrap-header
    margin-top 27px
.page
    display flex
    justify-content space-between
    margin 36px 0 73px 0

.left-menu
    padding 5px 20px
    background-color #f4f4f4
    border-radius 15px 15px 0 0 
    color #272727
    font 19px fonttahoma
    height 42px
.left-menu>p
    margin 0
    margin-top: 10px
#search-form
    display flex
    border none
    width 812px
    margin-bottom 5px
#search-form__input
    width calc(100% - 47px)
    height 36px
    border-radius 5px 0 0 5px
    border-right none
    color #394f76
    font-family Tahoma
    font-size 14px
    font-weight 400
    line-height 20px
    letter-spacing 0.35px
    padding-left 18px
  
#submit
    width 47px
    height 36px
    background  url("../assets/images/header/search-icon.png") 
    background-repeat no-repeat
    background-position 0 0  
    

#brodb
    // Text style for ">, >"
    color #6b6b6b
    font-size 10px
    letter-spacing 0.1px
    margin 18px 0 0 0
    width 812px !important
    font-family Tahoma
#brodb a    
    font-size 12px
    font-weight 400
    line-height 20px
    color #235ec8
    letter-spacing 0.12px
    
#brodb span
    font-size 12px
    font-weight 400
    line-height 20px
    letter-spacing 0.12px  


.page-left
    width 262px
    // background-color: #f8f8f8 
    // height 600px
.page-centr
    max-width: 812px

#title-catalog
    width 100%
    margin: 36px 0 0 0
    font-family Calibri
    font-size 28px
    font-weight 700
    line-height 30px
    letter-spacing 0.28px

#catalog-sort-wrap
    display flex
    justify-content: space-between
    margin-top 21px


#catalog-sort
    font: 13px fonttahoma
    line-height: 17px
    display flex
    justify-content: space-between
    width 435px
    border: 1px solid #f9f9f9
.catalog-sort__title
    display flex
    color #323232
    font-family Tahoma
    font-size 13px
    font-weight 400
    line-height 23px

.catalog-sort__select
    margin-left 5px
    padding 0 5px
    border 1px solid black
    display flex
    align-items center
    height 23px
    color #323232
    font-family Tahoma
    font-size 12px
    font-weight 400
    line-height 17px

/////catalog/////
#catalog-tovarov
    display flex
    flex-wrap: wrap
    justify-content: space-between
    width 100%
    // height 1224px
    margin 32px 0

.catalog-item
    width 196px
    height 400px
    border 1px solid #d3d3d3
    border-radius 8px
    margin: 3px 0
.catalog-item-articl
    height 32px
    border-bottom: 1px solid #d3d3d3
    color: #454545
    font 12px fonttahoma
    padding-left:  10px
    line-height: 32px

.catalog-item-img
    width 100%
    max-height: 200px
    overflow hidden 
    margin-top 5px

.catalog-item-img>img
    height 150px
    width 177px
    display block
    margin-left auto
    margin-right auto

.catalog-item-title
    font 15px fonttahoma
.catalog-item-title>p
    font 15px font-calibri
    font-weight normal  
    margin-top: 20px
    margin-left 20px
    padding 0
    line-height: 15px
.catalog-item-price>p
    margin-top 20px
    text-align center
    font 15px fonttahoma
.catalog-item-price>p>span
    font-size  22px
    font-weight bold

.catalog-item-to-cart
    height 32px
    margin-top 23px
    background #e86625
    border-radius 5px
    display flex
    align-items center
    justify-content center
    color: #ffffff

.catalog-item-to-cart>p
    position relative   
    font: 16px fonttahoma
    text-align center
//cart-icon
.catalog-item-to-cart>p:before
    position absolute
    left -25px
    top 0
    content: ""
    background: url("../assets/images/cart/cart_ps.png")
    background-repeat: no-repeat 
    width 22px
    height 18px

.catalog-item-to-par
    display flex
    align-items: center
    justify-content: center
    margin-top 13px

.catalog-item-to-par>p
    font: 12px fonttahoma
    line-height 12px
    margin-left 3px
#prefooter
    width 100%
    height 75px
    background-color #f3f3f3  
    margin-top 73px

#footer
    width 100%
    height 400px
    background-color #f6f6f6

.pagination
    display flex
    justify-content center